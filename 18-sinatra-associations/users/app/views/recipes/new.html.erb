<h1>Create a new recipe</h1>
<form method="POST" action="/recipes">
  <label for="recipe[title]">Title</label>
  <input type="text" name="recipe[title]">
  <br>
  <label for="recipe[duration]">Duration</label>
  <input type="text" name="recipe[duration]">
  <br>
  <%# <label for="user">User</label>
  <input type="text" name="user">
  <br>
  <label for="user_id">User id</label>
  <input type="number" name="user_id"> %>
  <select name="recipe[user_id]">
    <%# list users in a dropdown %>
    <% @users.each do |user| %>
      <option value="<%= user.id %>"><%= user.name %></option>
    <% end %>
  </select>
  <br>
  <input type="submit" value="CREATE NEW RECIPE">
</form>
